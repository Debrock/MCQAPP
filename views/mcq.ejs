<%- include("partials/header") %>

    <div class="mcqform">
        <h1>WELCOME TO QUIZ-I</h1>
        <br><br><br>
        <form action="/mcq" method="POST">
            <label for="Name"> Name: <input type="text" autocomplete="off" name="Name" placeholder="Name" required></label>
            <span class="tab"></span>
            <label for="RegistrationNo"> Registration No.: <input type="text" autocomplete="off" name="RegistrationNo" placeholder="Registration No" required></label>
            <br><br><br><br>
            <div class="row">
                
                <div class="col-lg-2"></div>
                <div class="col-lg-4">
                    <p>Which Gun does Magnum Research.Inc make?</p>
                    <input type="radio" name="Answer1" value="Luger" id="Luger" required>
                    <label for="Luger">Luger</label><br>
                    <input type="radio" name="Answer1" value="Dessert Egale" id="Dessert_Egale">
                    <label for="Dessert_Egale">Dessert Egale</label><br>
                </div>
                <div class="col-lg-4">
                    <p>Which Gun Company makes 44  Magnum pistol?</p>
                    <input type="radio" name="Answer2" value="Magnum Research.Inc" id="Magnum_Research_Inc" required>
                    <label for="Magnum_Research_Inc">Magnum Research.Inc</label><br>
                    <input type="radio" name="Answer2" value="Smith & Wesson" id="smith_&_wesson">
                    <label for="smith_&_wesson">Smith & Wesson</label><br>
                </div>
                <div class="col-lg-2"></div>
            </div>
            <br>       
            <button type="submit" class="btn btn-success btn-lg">SUBMIT</button>
        </form>

    </div>

<%- include("partials/footer") %>